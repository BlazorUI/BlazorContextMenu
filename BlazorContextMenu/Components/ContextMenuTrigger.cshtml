
<div oncontextmenu="@($"blazorContextMenu.OnContextMenu(event, '{MenuId.Replace("'","\\'")}');")" class="@CssClass">
    @ChildContent
</div>

@functions{
    /// <summary>
    /// The id of the <see cref="ContextMenu"/> to open. This parameter is required
    /// </summary>
    [Parameter]
    private string MenuId { get; set; }

    /// <summary>
    /// Additional css class for the trigger's div wrapper element
    /// </summary>
    [Parameter]
    private string CssClass { get; set; }

    [Parameter]
    protected RenderFragment ChildContent { get; set; }
    protected override void OnInit()
    {
        if (string.IsNullOrEmpty(MenuId))
        {
            throw new ArgumentNullException(nameof(MenuId));
        }
    }
}